{
  "name": "gitmark-ecash",
  "displayName": "Gitmark for eCash",
  "description": "Marks git commits on the eCash (XEC) blockchain.",
  "version": "0.3.2",
  "publisher": "mediaprophet",
  "icon": "images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/mediaprophet/gitmark-xec-vscode.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "webpack --mode development",
    "build": "webpack --mode production",
    "vscode:prepublish": "npm run build",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "contributes": {
    "commands": [
      {
        "command": "gitmark-ecash.markCommit",
        "title": "Mark Commit on eCash",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "gitmark-ecash.createWallet",
        "title": "Create New Wallet",
        "icon": "$(add)"
      },
      {
        "command": "gitmark-ecash.importWallet",
        "title": "Import Wallet from Seed",
        "icon": "images/import-wallet.svg"
      },
      {
        "command": "gitmark-ecash.refreshWallets",
        "title": "Refresh Wallets",
        "icon": "$(refresh)"
      },
      {
        "command": "gitmark-ecash.renameWallet",
        "title": "Rename Wallet",
        "icon": "$(edit)"
      },
      {
        "command": "gitmark-ecash.removeWallet",
        "title": "Remove Wallet",
        "icon": "$(trash)"
      },
      {
        "command": "gitmark-ecash.copyAddress",
        "title": "Copy Address",
        "icon": "$(clippy)"
      },
      {
        "command": "gitmark-ecash.viewOnExplorer",
        "title": "View on Block Explorer",
        "icon": "$(link-external)"
      },
      {
        "command": "gitmark-ecash.showSeed",
        "title": "Show Seed Phrase",
        "icon": "$(key)"
      },
      {
        "command": "gitmark-ecash.showQrCode",
        "title": "Show Wallet QR Code",
        "icon": "$(preview)"
      }
      ,
      {
        "command": "gitmark-ecash.selectWallet",
        "title": "Select Wallet",
        "icon": "$(check)"
      }
    ],
      "configuration": {
        "type": "object",
        "title": "Gitmark eCash Settings",
        "properties": {
          "gitmark-ecash.fundingWif": {
            "type": "string",
            "default": "",
            "description": "WIF for funding transactions. Set automatically when selecting a wallet."
          },
          "gitmark-ecash.destinationAddress": {
            "type": "string",
            "default": "",
            "description": "Destination address for marking commits. Set automatically when selecting a wallet."
          },
          "gitmark-ecash.changeAddress": {
            "type": "string",
            "default": "",
            "description": "Change address for transactions. Set automatically when selecting a wallet."
          }
        }
      },
    "menus": {
      "scm/title": [
        {
          "command": "gitmark-ecash.markCommit",
          "when": "scmProvider == 'git'",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "gitmark-ecash.createWallet",
          "when": "view == walletsTreeView",
          "group": "navigation@1"
        },
        {
          "command": "gitmark-ecash.importWallet",
          "when": "view == walletsTreeView",
          "group": "navigation@2"
        },
        {
          "command": "gitmark-ecash.refreshWallets",
          "when": "view == walletsTreeView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "gitmark-ecash.copyAddress",
          "when": "viewItem == wallet || viewItem == transaction",
          "group": "1_primary@1"
        },
        {
          "command": "gitmark-ecash.showSeed",
          "when": "viewItem == wallet",
          "group": "1_primary@2"
        },
        {
          "command": "gitmark-ecash.selectWallet",
          "when": "viewItem == wallet",
          "group": "1_primary@0"
        },
        {
          "command": "gitmark-ecash.renameWallet",
          "when": "viewItem == wallet",
          "group": "2_secondary@1"
        },
        {
          "command": "gitmark-ecash.removeWallet",
          "when": "viewItem == wallet",
          "group": "2_secondary@2"
        },
        {
          "command": "gitmark-ecash.showQrCode",
          "when": "viewItem == wallet",
          "group": "1_primary@3"
        },
        {
          "command": "gitmark-ecash.viewOnExplorer",
          "when": "viewItem == commitHistoryItem || viewItem == transaction",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitmark-ecash-container",
          "title": "Gitmark eCash",
          "icon": "images/icon.png"
        }
      ]
    },
    "views": {
      "gitmark-ecash-container": [
        {
          "id": "walletsTreeView",
          "name": "Wallets",
          "type": "tree",
          "icon": "images/tree.svg",
          "welcome": "No wallets found. Use the (+) button above to create or import a wallet."
        },
        {
          "id": "commitHistoryView",
          "name": "Commit History",
          "type": "tree",
          "icon": "images/history.svg",
          "welcome": "No marked commits found for this workspace yet."
        }
      ]
    }
  },
  "dependencies": {
    "bip39": "^3.1.0",
    "ecash-lib": "^4.3.1",
    "ecash-wallet": "1.0.1",
    "ecashaddrjs": "^2.0.0",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/qrcode": "^1.5.5",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "copy-webpack-plugin": "^13.0.0",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.3.3",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1"
  }
}
